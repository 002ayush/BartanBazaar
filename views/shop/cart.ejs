<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

        <main>
            <% if (cartProducts.length > 0) { %>
                <div class="grid">
                    <% for (let product of cartProducts) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title">
                                    <%= product.CartAllProducts.title %>
                                </h1>
                            </header>
                            <div class="card__image">
                                <img src="<%= product.CartAllProducts.imageUrl %>" alt="<%= product.title %>">
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">&#8377;
                                    <%= product.CartAllProducts.price %>
                                </h2>
                                <p class="product__description">
                                    <%= product.CartAllProducts.description %>
                                </p>
                            </div>
                            <div class="centered bold-total-quantity">
                                Total quantity : <%=product.cartProduct.qty%>
                            </div>
                            <div class="cart-btn-delete-center">
                                <form action="/cart-delete-items" method="post">
                                    <input type="hidden" name="cartItems" value="<%=product.cartProduct.id%>">
                                    <button type="submit" class="btn btn-delete">Delete</button>
                                </form>
                            </div>
                           
                        </article>
                        <% } %>
                </div>
                <% } else { %>
                    <h1>No Products Found!</h1>
                    <% } %>
        </main>
        <%- include('../includes/end.ejs') %>